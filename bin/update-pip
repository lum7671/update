# pip: Python package installer
for pip in "pip" "pip3"; do
  if command -v "$pip" >/dev/null 2>&1; then
    $pip install --upgrade pip
    $pip install --upgrade $pip
    $pip install --upgrade setuptools
    $pip freeze --local | sed -n 's/==.*//p' | xargs -n1 -I{} $pip install --upgrade "{}"
  fi
done
